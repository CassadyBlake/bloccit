<div class="container">
  <h2>Sign Up Confirmation<h2>
  <h4>Are you sure these values are correct?</h4>
  </br>
  <p>Email: <%= @user.email %></p>
  <p>Name: <%= @user.name %></p>

  <div class="row">
    <div class="col-sm-1">
      <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
    </div>
    <div class="col-sm-1">
      <%= button_to "No", { controller: "users", action: "new" }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
