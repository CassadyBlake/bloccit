<div class="media">
  <div class="media pull-left">
  <%= image_tag favorite.post.user.avatar_url(48), class: 'media-object' %>
  </div>
  <h4 class="media-heading">
    <%= link_to favorite.post.title, topic_post_path(favorite.post.topic, favorite) %>
  </h4>
  <small>
    <%= favorite.post.votes.count %> Votes <br>
    <%= favorite.post.comments.count %> Comments
  </small>
</div>
